{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/composables/*": ["src/composables/*"],
            "@/core/*": ["src/core/*"],
            "@/directives/*": ["src/directives/*"],
            "@/helpers/*": ["src/helpers/*"],
            "@/layouts/*": ["src/layouts/*"],
            "@/modules/*": ["src/modules/*"],
            "@/router": ["src/router.js"],
            "@/services/*": ["src/services/*"],
            "@/store": ["src/store/index.js"],
            "@/types/*": ["src/types/*"],
            "@/views/*": ["src/views/*"],
            "@/shared": ["src/shared.js"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
